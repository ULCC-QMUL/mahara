<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="lib/db" VERSION="20060926" COMMENT="XMLDB file for Mahara files plugin tables"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../lib/xmldb/xmldb.xsd"
>
<TABLES>
    <TABLE NAME="artefact_file_files">
        <FIELDS>
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" />
            <FIELD NAME="name" TYPE="text" NOTNULL="true" />
            <FIELD NAME="type" TYPE="text" NOTNULL="false" />
            <FIELD NAME="parentfolder" TYPE="int" NOTNULL="false" />
            <FIELD NAME="artefact" TYPE="int" LENGTH="10" NOTNULL="true" />
        </FIELDS>
        <KEYS>
            <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            <KEY NAME="parentfolderfk" TYPE="foreign" FIELDS="parentfolder" REFTABLE="artefact_file_files" REFFIELDS="id" />
            <KEY NAME="artefactfk" TYPE="foreign" FIELDS="artefact" REFTABLE="artefact" REFFIELDS="id" />
        </KEYS>
    </TABLE>
</TABLES>
</XMLDB>
